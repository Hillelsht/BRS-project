    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${cwd}"
            }
        },
        {
            "name": "Fetch BRS Data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/brs/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--hyperparams_path",
                "hyperparams.yml"
            ]
        }
    ]
}